generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstname String
  lastname String
  email String @unique
  password String
  username String @unique
  avatar String?
  bio String?
  friends String[]
  role String @default("User")
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  sender String
  receiver String
  message String
  time DateTime @default(now())
}